<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.couchtatertot"
    android:versionCode="14"
    android:versionName="1.3.4" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <application
        android:icon="@drawable/couchtatertot"
        android:label="@string/app_name"
        android:theme="@style/Theme.CouchTatertot" >
        
        <meta-data android:name="android.app.default_searchable"
                android:value=".SearchActivity" />
        
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".SearchActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                   android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".LogActivity" >
        </activity>
        <activity
            android:name=".NotificationsActivity" >
        </activity>
        <activity
            android:name=".PreferencesActivity" >
        </activity>
        <activity
            android:name=".AddMovieActivity" >
        </activity>
        <activity
            android:name=".EditMovieActivity" >
        </activity>
        <activity
            android:name=".ReleasesActivity" >
        </activity>
        <activity
            android:name=".AboutActivity" >
        </activity>
        <activity
            android:name=".OnShareViaActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>